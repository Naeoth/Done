<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexis.done" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.activities.AddTaskActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.MainActivity"
            android:label="@string/title_activity_add_task" >
        </activity>
        <activity
            android:name=".view.activities.InputDateActivity"
            android:label="@string/title_activity_input_date" >
        </activity>
        <activity
            android:name=".view.activities.InputTimeActivity"
            android:label="@string/title_activity_input_time" >
        </activity>
        <activity
            android:name=".view.activities.InputDurationActivity"
            android:label="@string/title_activity_input_duration" >
        </activity>
        <activity
            android:name=".view.activities.UpdateTaskActivity"
            android:label="@string/title_activity_update_task" >
        </activity>
    </application>

</manifest>
